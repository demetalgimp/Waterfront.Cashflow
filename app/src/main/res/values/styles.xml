<resources>
    <style name="Base" parent="">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Budget_Prorated_Fields" parent="Base">
        <item name="android:layout_width">100sp</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>
    <style name="Category_Spinner" parent="Base">
        <item name="android:layout_width">500dp</item>
    </style>
    <style name="Date" parent="Base">
        <item name="android:layout_width">45sp</item>
        <item name="android:text">@string/_00_00</item>
    </style>
    <style name="Four_Digit_Money" parent="Base">
        <item name="android:layout_width">75sp</item>
        <item name="android:text">@string/_0_000_00</item>
        <item name="android:layout_marginStart">5dp</item>
    </style>
    <style name="Three_Digit_Money" parent="Base">
        <item name="android:layout_width">65sp</item>
        <item name="android:text">@string/_000_00</item>
        <item name="android:layout_marginStart">5dp</item>
    </style>
    <style name="Calendar_Day" parent="">
        <item name="android:layout_width">57dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/inset_border</item>
    </style>
    <style name="Calendar_Day_Header" parent="Calendar_Day">
        <item name="android:layout_height">30dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FFFF00</item>
    </style>
</resources>