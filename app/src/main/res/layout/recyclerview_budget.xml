        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/inset_border"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_Name">

        <LinearLayout
            android:id="@+id/linearLayout_TimeBracket_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/light_teal_1">

            <TextView
                android:id="@+id/textView_time_bracket_record_id_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@id/linearLayout_TimeBracket_1"
                app:layout_constraintEnd_toEndOf="@id/linearLayout_TimeBracket_1"
                app:layout_constraintStart_toStartOf="@id/linearLayout_TimeBracket_1"
                app:layout_constraintTop_toTopOf="@id/linearLayout_TimeBracket_1" />

            <TextView
                android:id="@+id/textView_From_1"
                style="@style/Date"
                android:layout_marginStart="16dp"
                android:gravity="center_vertical|end" />

            <TextView
                android:id="@+id/textView10_1"
                style="@style/Base"
                android:layout_width="wrap_content"
                android:layout_marginStart="4dp"
                android:text="@string/hyphen" />

            <TextView
                android:id="@+id/textView_To_1"
                style="@style/Date"
                android:layout_marginStart="4dp" />

            <TextView
                android:id="@+id/textView_Amount_1"
                style="@style/Four_Digit_Money"
                android:textAlignment="textEnd" />

            <Spinner
                android:id="@+id/spinner_Periodicity_1"
                style="@style/Base"
                android:layout_width="230dp"
                android:layout_marginStart="8dp" />

            <TextView
                android:id="@+id/textView_MonthlyProrated_1"
                style="@style/Budget_Prorated_Fields"
                android:textAlignment="textEnd"
                android:text="@string/_0_000_mo" />

            <TextView
                android:id="@+id/textView_WeeklyProrated_1"
                style="@style/Budget_Prorated_Fields"
                android:textAlignment="textEnd"
                android:text="@string/_000_wk" />

        </LinearLayout>

        <LinearLayout
