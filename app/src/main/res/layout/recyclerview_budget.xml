        android:layout_marginStart="8dp"
        android:text="Cap: "
        android:textAlignment="textEnd"
        app:layout_constraintStart_toEndOf="@+id/textView_Name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_Cap"
