    <TextView
        android:id="@+id/label_DueDate"
        style="@style/Base"
        android:layout_width="75dp"
        android:layout_marginStart="8dp"
        android:text="@string/due_date"
        android:textAlignment="textEnd"
        app:layout_constraintStart_toEndOf="@+id/textView_Name"
        app:layout_constraintTop_toBottomOf="@+id/label_AmountCap" />

    <TextView
        android:id="@+id/textView_DueDate"
        style="@style/Base"
        android:layout_width="wrap_content"
        android:text="@string/_00_00"
        app:layout_constraintStart_toEndOf="@+id/label_DueDate"
        app:layout_constraintTop_toBottomOf="@+id/textView_Cap" />

    <TextView
        android:id="@+id/label_AmountCap"
        style="@style/Base"
        android:layout_width="75dp"
        android:layout_marginStart="8dp"
        android:text="@string/cap"
        android:textAlignment="textEnd"
        app:layout_constraintStart_toEndOf="@+id/textView_Name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_Cap"
        style="@style/Base"
        android:layout_width="wrap_content"
        android:text="@string/_0_000_00"
        app:layout_constraintStart_toEndOf="@+id/label_AmountCap"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout_TimeBracket_Main" />

